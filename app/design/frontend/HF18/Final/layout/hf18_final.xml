            <block type="page/html_header" name="header" as="header" template="hf18/final/header.phtml">
                <block type="hf18_final/cart" name="hf18_minicart" template="hf18/final/minicart.phtml"/>
            </block>
            <block type="page/html_footer" name="footer" as="footer" template="hf18/final/footer.phtml"/>
